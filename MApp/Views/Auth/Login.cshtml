@model MApp.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@Html.ValidationSummary(true, "", new { @style = "color: red" })

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = new { @class = "form-control" } })
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = new { @class = "form-control" } })
    </div>
    <p>
        <button type="submit" class="btn btn-default btn-md">Login</button>
    </p>
}