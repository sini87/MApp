<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-tokenfield/bootstrap-tokenfield.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-tokenfield/tokenfield-typeahead.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/knockout-3.4.0.debug.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.debug.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-tokenfield.js"></script>
    <script type="text/javascript" src="~/Scripts/typeahead.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-1.11.4.js"></script>

    <script type="text/javascript" src="~/Scripts/jquery.treegrid.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.treegrid.bootstrap3.js"></script>
    <link rel="stylesheet" href="~/Content/jquery.treegrid.css" />

    <link href="~/Content/bootstrap-select.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/bootstrap-select.js"></script>

    <script src="~/Scripts/MAppFunctions.js"></script>
    @*<link href="~/Content/jquery.bootstrap-touchspin.css" rel="stylesheet"type="text/css" />
    <script src="~/Scripts/jquery.bootstrap-touchspin.js" type="text/javascript"></script>*@
    <script src="~/Scripts/knockout.validation.js" type="text/javascript"></script>
    
    <script src="~/Scripts/validator.js" type="text/javascript"></script>
    <script src="~/Scripts/moment.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li >
                            <a href="@Url.Action("Index", "Profile")"><span class="glyphicon glyphicon-user"></span> @User.Identity.Name</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Logout", "Auth")"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            @*@Html.ActionLink("Login", "Index", "Home", new { area = "" }, new { @class = "nav navbar-nav navbar-left" })*@
                            <a href="@Url.Action("Login", "Auth")"><span class="glyphicon glyphicon-user"></span> Login</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Registration", "Auth")"><span class="glyphicon glyphicon-log-in"></span> Register</a>
                        </li>
                    }
                </ul>

                @if (@User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-left">                    
                        <li>
                            <a href="@Url.Action("Index", "Issue")"><span class="glyphicon glyphicon-lightbulb"></span> MApp</a>
                        </li>
                        
                        <li>
                            <a href="@Url.Action("Creating", "Issue", new { issueId = -1 })"><span class="glyphicon glyphicon-plus"></span> Create New Issue</a>
                        </li>
                        
                        <li id="creating-menu">
                            <a href="@Url.Action("Creating", "Issue", new { issueId = -1 })">Creating</a>
                        </li>
                        <li id="brainstorming-menu"class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Brainstorming<span class="caret"></span></a>
                            <ul id="brainstorming-menu" class="dropdown-menu">
                                <li id="alternatives-menu"><a href="#">Alternatives</a></li>
                                <li id="criteriafinding-menu"><a href="#">Criteria finding</a></li>
                                <li id="criteriarating-menu"><a href="#">Criteria rating</a></li>
                            </ul>
                        </li>
                        <li id="evaluating-menu">
                            <a href="@Url.Action("Creating", "Issue", new { issueId = -1 })">Evaluating</a>
                        </li>
                        <li id="finished-menu">
                            <a href="@Url.Action("Creating", "Issue", new { issueId = -1 })">Deciding</a>
                        </li>
                    </ul>

                }
                else
                {
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            @Html.ActionLink("MApp", "Auth","Login", new { @class = "nav navbar-nav navbar-left" })
                        </li>
                    </ul>
                }
                
            </div>

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Siniša Zubić</p>
        </footer>
    </div>

</body>
</html>